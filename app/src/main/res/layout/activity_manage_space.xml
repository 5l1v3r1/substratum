<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="projekt.substratum.ManageSpaceActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/erase_cache_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_space_cache_text_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cache_counter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_space_cache_counter_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erase_cache_title" />

        <TextView
            android:id="@+id/cache_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cache"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erase_cache_title" />

        <Button
            android:id="@+id/clear_cache_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_cache_button_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cache_counter_title"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/reset_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_space_reset_text_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/clear_cache_button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/reset_app_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manage_space_reset_text_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reset_app_title" />

        <Button
            android:id="@+id/reset_app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/reset_app_button_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reset_app_desc" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>
